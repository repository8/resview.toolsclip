<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:text="提示信息"
        android:textColor="@color/color_text_black"
        android:textSize="28dp" />

    <EditText
        android:id="@+id/txt_center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/edit_round_white"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/txt_left"
        android:layout_toLeftOf="@+id/btn_confirm"
        android:gravity="bottom"
        android:hint=""
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColor="@color/color_text_black"
        android:textColorHint="@color/color_normal_gray"
        android:textSize="28dp" />
    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/select_img"/>

</RelativeLayout>