<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_left"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="提示信息"
        android:gravity="center"
        android:textColor="@color/color_normal_white"
        android:textSize="22dp"  />
    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinner_leftterisp"
        android:layout_below="@+id/txt_left"
        android:background="@drawable/spinner_drop_round_white"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/color_text_black"
        android:textColorHint="@color/color_normal_gray"
        android:textSize="22dp"
        android:gravity="center"
        android:spinnerMode="dropdown"/>

</RelativeLayout>