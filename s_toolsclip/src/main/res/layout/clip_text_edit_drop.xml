<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txt_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="提示信息"
        android:textColor="@color/color_normal_white"
        android:textSize="22dp"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/txt_left"
        android:layout_width="wrap_content"
        android:minWidth="130dp"
        android:layout_height="0dp"
        android:gravity="bottom"
        android:text="提示信息"
        android:textColor="@color/color_normal_white"
        android:textSize="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/txt_edit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColor="@color/color_text_black"
        android:background="@drawable/edit_round_white"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/txt_left"
        app:layout_constraintRight_toRightOf="parent"
        />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinner"
        android:layout_toRightOf="@+id/txt_left"
        android:background="@null"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/color_text_black"
        android:textColorHint="@color/color_normal_gray"
        android:textSize="20dp"
        android:gravity="center"
        android:spinnerMode="dropdown"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/txt_left"
        app:layout_constraintRight_toRightOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>