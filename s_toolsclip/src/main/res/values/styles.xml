<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
<!--    <item name="android:screenOrientation">landscape</item>-->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:launchMode">singleTask</item>
        <item name="android:textColor">#000</item>
        <item name="android:dropDownListViewStyle">@style/mySpinnerStyle</item>
    </style>
    <style name="AppThemeWithTitle" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:colorBackground">#323232</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:actionMenuTextColor">#333333</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:launchMode">singleTask</item>
        <item name="android:dropDownListViewStyle">@style/mySpinnerStyle</item>
    </style>
<!--    4.2 android:buttonStyle这个无效-->
    <style name="mySpinnerStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:background">@drawable/edit_round_white</item>
        <item name="android:divider">#BBBBBB</item>
        <item name="android:dividerHeight">1dp</item>
    </style>
    <style name="NestedScrollBarStyle">
        <item name="android:scrollbarFadeDuration">2</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fillViewport">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="button_colorbg_style">
        <item name="android:background">@drawable/btn_st_all</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_normal_white</item>
        <item name="android:textColorHint">#ff666666</item>
    </style>
