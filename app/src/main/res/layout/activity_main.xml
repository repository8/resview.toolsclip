<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#233323"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activity："
        android:textSize="25sp"
        android:gravity="left"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.resview.toolsclip.LeftTextRightText
        android:id="@+id/lef_1"
        app:layout_constraintTop_toBottomOf="@+id/txt_name"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>
    <com.resview.toolsclip.LeftTextRightEdit
        android:id="@+id/lef_2"
        app:layout_constraintTop_toBottomOf="@+id/lef_1"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>
    <com.resview.toolsclip.LeftTextRightSpinner
        android:id="@+id/lef_3"
        app:layout_constraintTop_toBottomOf="@+id/lef_2"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>
    <EditText
        android:id="@+id/edit_input"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        style="@android:style/TextAppearance.Widget.EditText"
        android:text=""
        android:hint="输入"
        android:inputType="numberDecimal"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/txt_result"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/txt_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="结果："
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:id="@+id/btn_start"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="测试"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_result"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/btn_switch"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="切换"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_start"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>